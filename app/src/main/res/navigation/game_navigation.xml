<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_navigation"
    app:startDestination="@id/itemHome">

    <fragment
        android:id="@+id/itemHome"
        android:name="com.example.adv160421058week2.MainFragment"
        android:label="Main Screen"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/actionGameFragment"
            app:destination="@id/gameFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/actionResultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.adv160421058week2.GameFragment"
        android:label="Game Screen"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/actionMainFragment"
            app:destination="@id/itemHome"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@android:anim/slide_in_left" />
        <argument
            android:name="player_name"
            app:argType="string" />
        <action
            android:id="@+id/actionTestFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@id/itemHome" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.adv160421058week2.ResultFragment"
        android:label="Result Screen"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/actionResultToMainFragment"
            app:destination="@id/itemHome" />
        <argument
            android:name="skor"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.adv160421058week2.TestFragment"
        android:label="Test Fragment"
        tools:layout="@layout/fragment_test" />
    <fragment
        android:id="@+id/itemHistory"
        android:name="com.example.adv160421058week2.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/itemProfile"
        android:name="com.example.adv160421058week2.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>